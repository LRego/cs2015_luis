<nav class="navbar navbar-default">
    <div class="container">
        <ul class="nav nav-pills pull-right">
            <% @posts.each do |post| %>
                <li role="presentation"><a href="show/<%= post.id %>"><%= post.title %></a></li>
            <% end %>
        </ul>
    </div>
</nav>
<section>
    <div class="container">
        <div class="row">
            <div class="col-sm-12 col-md-12">
                <% @posts.each do |post| %>
                    <div class="col-md-12">
                        <div class="row">
                            <div class="col-md-6 blog-title">
                                <h1><%= post.title %></h1>
                            </div>
                        </div>
                        <div class="blog-body">
                            <p>
                                <%= post.body %>
                            </p>
                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                <div class="row">
                                    <div class="col-md-6">
                                        <b>Posted</b> by: <%= post.author %>
                                    </div>
                                    <div class="col-md-6 pull-right">
                                        <b>Date:</b> <%= post.created_at %>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                <% end %>
            </div>
        </div>
    </div>
</section>

<footer class="footer navbar-fixed-bottom alert-info">
    <div class="container">
        <ul class="nav nav-pills pull-right">
            <% @posts.each do |post| %>
                <li role="presentation"><a href="show/<%= post.id %>"><%= post.title %></a></li>
            <% end %>
        </ul>
    </div>
</footer>
