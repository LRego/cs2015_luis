<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="col-md-6">
                <ul>
                    <% @parties.each do |party|%>
                        <li>
                            <span><%= party.name%></span> - <span><%= party.description%></span> - <span><%= party.date_time%></span>
                            <a href="/<%= party.id %>">View Party</a>
                        </li>
                    <% end %>
                </ul>
            </div>
            <div class="col-md-6">
                <a href="/new">New Party</a>
            </div>
        </div>
    </div>
</div>
